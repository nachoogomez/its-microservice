generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Factura {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  numero    Int           @unique // Índice único para evitar duplicados
  fecha     DateTime
  cliente   String        // userId del cliente
  total     Float
  items     FacturaItem[]
  createdAt DateTime     @default(now())

  @@index([cliente]) // Índice para consultas por cliente
  @@index([fecha])   // Índice para consultas por fecha
}

model FacturaItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  facturaId   String  @db.ObjectId
  descripcion String
  cantidad    Int
  precio      Float
  factura     Factura @relation(fields: [facturaId], references: [id])

  @@index([facturaId]) // Índice para consultas por factura
}